{
  "name": "cps-formatter",
  "displayName": "cps Formatter",
  "description": "A formatter for .cps files",
  "version": "0.1.1",
  "publisher": "koyoh-utils",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [{
      "command": "cps-formatter.format",
      "title": "Format CPS File"
    }
    ],
  "keybindings": [
    {
      "command": "cps-formatter.format",
      "key": "alt+shift+f",
      "when": "editorTextFocus && editorLangId == 'cps'"
    }
  ],
  "languages": [
    {
      "id": "cps",
      "extensions": [
        ".cps"
      ]
    }
  ],
  "configuration": {
    "title": "CPS Formatter",
    "properties": {
      "cpsFormatter.lastUpdateDateTimeTag": {
        "type": "string",
        "default": "# Last Updated:",
        "description": "The tag used to identify the last update date and time in CPS files."
      }
    }
  }
},
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ttysawano/cps-formatter"
  }
}
